---
import '@fontsource/dseg14-classic/700.css'

import NavBar from '@/components/navbar.astro'
import { PlayerBar } from '@/components/player-bar.jsx'
import { ViewTransitions } from 'astro:transitions'
import { DialogComplete } from '@/components/dialog-complete/dialog-complete'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Gym app for tracking workouts' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <link rel='manifest' href='/manifest.json' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body>
    <div id='app' class='relative h-svh p-2 gap-2'>
      <header class='[grid-area:header] h-20'>
        <NavBar />
      </header>

      <main class='[grid-area:main] rounded-lg overflow-y-auto w-full'>
        <slot />
      </main>

      <footer class='[grid-area:footer] h-20'>
        <PlayerBar client:load transition:name='gym-player' transition:persist />
      </footer>

      <DialogComplete client:load />
    </div>

    <style>
      #app {
        display: grid;
        grid-template-areas:
          'header'
          'main'
          'footer';
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr auto;
      }
    </style>

    <style is:global>
      :root {
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(45deg, rgb(var(--accent)), rgb(var(--accent-light)) 30%, white 60%);

        --accent-red: 234, 58, 58;
        --accent-light-red: 250, 210, 210;
        --accent-dark-red: 101, 10, 10;
        --accent-gradient-red: linear-gradient(
          45deg,
          rgb(var(--accent-red)),
          rgb(var(--accent-light-red)) 30%,
          white 60%
        );

        --accent-green: 92, 123, 30;
        --accent-light-green: 204, 224, 204;
        --accent-dark-green: 10, 49, 10;
        --accent-gradient-green: linear-gradient(
          45deg,
          rgb(var(--accent-green)),
          rgb(var(--accent-light-green)) 30%,
          white 60%
        );

        --accent-blue: 58, 136, 234;
        --accent-light-blue: 204, 224, 250;
        --accent-dark-blue: 10, 49, 101;
        --accent-gradient-blue: linear-gradient(
          45deg,
          rgb(var(--accent-blue)),
          rgb(var(--accent-light-blue)) 30%,
          white 60%
        );

        --accent-orange: 234, 136, 58;
        --accent-light-orange: 250, 224, 204;
        --accent-dark-orange: 101, 49, 10;
        --accent-gradient-orange: linear-gradient(
          45deg,
          rgb(var(--accent-orange)),
          rgb(var(--accent-light-orange)) 30%,
          white 60%
        );

        --accent-pantone: 80, 158, 17;
        --accent-light-pantone: 204, 224, 204;
        --accent-dark-pantone: 10, 49, 10;
        --accent-gradient-pantone: linear-gradient(
          45deg,
          rgb(var(--accent-pantone)),
          rgb(var(--accent-light-pantone)) 30%,
          white 60%
        );

        --accent-purple: 136, 58, 234;
        --accent-light-purple: 224, 204, 250;
        --accent-dark-purple: 49, 10, 101;
        --accent-gradient-purple: linear-gradient(
          45deg,
          rgb(var(--accent-purple)),
          rgb(var(--accent-light-purple)) 30%,
          white 60%
        );

        --accent-orion: 234, 58, 136;
        --accent-light-orion: 250, 204, 224;
        --accent-dark-orion: 101, 10, 49;
        --accent-gradient-orion: linear-gradient(
          45deg,
          rgb(var(--accent-orion)),
          rgb(var(--accent-light-orion)) 30%,
          white 60%
        );
      }
      html {
        font-family: system-ui, sans-serif;
        background: #13151a;
        background-size: 224px;
      }
      code {
        font-family:
          Menlo,
          Monaco,
          Lucida Console,
          Liberation Mono,
          DejaVu Sans Mono,
          Bitstream Vera Sans Mono,
          Courier New,
          monospace;
      }

      #bg-player {
        opacity: 0.3;
        list-style: none;
        display: flex;
        padding: 1px;
        background-color: transparent;
        background-image: none;
        background-size: 100%;
        border-radius: 7px;
        background-position: 100%;
        box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1);
        background-position: 0;
        background-image: linear-gradient(to right, transparent, #ffff00);
      }

      #timer-rest {
        text-shadow: 0 0 6px #ffff00;
      }
    </style>
  </body>
</html>
